// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  email    String  @unique
  username String  @unique
  image    String?
  password String

  @@map("users")
}

model Token {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String
  hash  String

  @@map("token")
}
